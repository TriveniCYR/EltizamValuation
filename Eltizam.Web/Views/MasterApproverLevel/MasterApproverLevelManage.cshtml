@using Microsoft.AspNetCore.Http
@using Eltizam.Web.Controllers
@using Eltizam.Utility.Models
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHttpContextAccessor HttpContextAccessor
@inject Microsoft.Extensions.Localization.IStringLocalizer<Eltizam.Resource.Master> MasterLocalizer

@inject Microsoft.Extensions.Localization.IStringLocalizer<Eltizam.Resource.Shared> SharedLocalizer
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@model Eltizam.Business.Models.MasterApproverLevelModel
@{
    var objPermssion = (RolePermissionModel)ViewBag.Access;
    var isAdd = objPermssion.Add ? 1 : 0;
    var isEdit = objPermssion.Edit ? 1 : 0;
    string jsVersion = @Configuration.GetSection("StaticJS")["version"];
    Layout = "_Layout";
    var _md = (Model.Id) > 0 ? "Edit" : "Add";
    var _header = " Approver Master";
    ViewData["Title"] = _md + _header;
}

<form asp-action="MasterApproverLevelManage" method="post">
    <main>
        <div class="whiteBoxShadow">
            <div class="heading position-relative flex justify-between ">
                <h3 class="dashboardTitle">@_md @_header</h3>
                <div class="hamburger">
                    <a class="greyBtn lineBtn formAbtn" asp-action="ApproverLevels">@_header</a>
                    <img src="../assets/right-arrow.svg" alt="hamburger-icon" />
                    <span>@_md</span>
                </div>
            </div>
            <div class="bodyContent">
                <div class="inputSearchs p-0">
                    <div class="tabSection">
                        <input type="hidden" id="hdnmasterapproverId" value="@(Model == null ? 0 : Model.Id)" />
                        <input type="hidden" id="isAddPerm" value="@isAdd" />
                        <input type="hidden" id="isEditPerm" value="@isEdit" />
                        @Html.HiddenFor(model=> model.IsActive)
                        <div class="flex">
                            <label for="" class="w-50">
                                <p class="m-0">
                                    Description
                                    <span class="text-danger">*</span>
                                </p>
                                @Html.TextBoxFor(model => model.Description, new { htmlAttributes = new { @autocomplete = "off", @class = "form-control checkbox-checked", @placeholder = @MasterLocalizer["Description"] } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </label>

                            <label for="" class="w-50">
                                Status
                                <input type="checkbox" id="isActiveT" class="input-switch" name="IsActive" value="@Model.IsActive" @(Model.IsActive ? "checked" : "") required />
                                <label class="label-switch" for="isActiveT"></label>
                                <span class="info-text" style="top:-20px;"></span>
                            </label>
                        </div>
                        <div class="flex">
                            <label for="" class="w-50">
                                <p class="m-0">
                                    FromAmount
                                    <span class="text-danger">*</span>
                                </p>
                                @Html.TextBoxFor(model => model.FromAmount, new { htmlAttributes = new { @autocomplete = "off", @class = "form-control checkbox-checked", @placeholder = @MasterLocalizer["FromAmount"] } })
                                @Html.ValidationMessageFor(model => model.FromAmount, "", new { @class = "text-danger" })
                            </label>

                            <label for="" class="w-50">
                                <p class="m-0">
                                    ToAmount
                                    <span class="text-danger">*</span>
                                </p>
                                @Html.TextBoxFor(model => model.ToAmount, new { htmlAttributes = new { @autocomplete = "off", @class = "form-control checkbox-checked", @placeholder = @MasterLocalizer["ToAmount"] } })
                                @Html.ValidationMessageFor(model => model.ToAmount, "", new { @class = "text-danger" })
                            </label>
                        </div>
                        <div class="text-right buttonArea bodyContent plr-0">

                            <a href='/MasterApproverLevel/ApproverLevels'> <button type="button" class="lineBtn greyBtn mr-12">Cancel</button></a>
                            <button type="submit" id="btnSaveEdit" class="bgBlue">Save</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </main>
</form>


<script src="~/AdminLTE/plugins/jquery/jquery.min.js"></script>
<script type="text/javascript" src="~/js/custom/main.js?v=@jsVersion"></script>
<script type="text/javascript" src="~/js/custom/MasterApprover/MasterApproverLevel.js?v=@jsVersion"></script>

@section MyScripts
    {
    <script>
        var UpsertMasterApprover = "@Eltizam.Web.Helpers.APIURLHelper.UpsertMasterApproverLevel";
    </script>
}


