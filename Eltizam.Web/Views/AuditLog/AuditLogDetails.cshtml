@using Eltizam.Business.Models;
@model AuditLogModel
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    string jsVersion = @Configuration.GetSection("StaticJS")["version"];
    var _header = "Audit Logs";
    var _md = "View";
    ViewData["Title"] = _header; 
}

<main>
    <div class="whiteBoxShadow">
        <div class="heading position-relative flex justify-between">
            <h3 class="dashboardTitle">View Audit Log</h3>
            <div class="hamburger">
                <a class="greyBtn lineBtn formAbtn" asp-action="Logs">@_header</a>
                <img src="../assets/right-arrow.svg" alt="hamburger-icon" />
                <span>@_md</span>
            </div>
        </div>

        <div class="accordion valueAdvance">

            <input type="checkbox" id="section1" class="advancedSearch visible-in-web">
            <label for="section1" class="advaceSearhBtn"><img src="../assets/filter.svg" alt="filterSearch" /></label>
            <div class="accordion-content inputSearchs">

                <h3 class="text-center">Advanced Search</h3>
                <form>


                    <div class="flex flex-start">

                       
                     @*    <label for="ParentTableName">
                            <p class="m-0">TableName</p>
                            @Html.DropDownListFor(model => model.ParentTableName, new List<SelectListItem> { }, new {  })
                        </label> *@
                        <label for="fromDate">
                            From Date
                            <input type="text" id="FromDate" class="formatted-date-input" name="FromDate" asp-for="FromDate">
                        </label>
                        <label for="toDate">
                            To Date
                            <input type="text" id="ToDate" class="formatted-date-input" name="ToDate" asp-for="ToDate">
                        </label>
                    </div>

                    <div class="text-center">
                        <button type="button" class="blueBtn" onclick="InitializeAuditLogList()">Search</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="bodyContent p-0">
            <div class="tabcontent m-0" style="display: block;">
                <div class="auditLog-acc roundBorderBox">
                    <input type="hidden" id="tableName" value=@ViewBag.Filter.TableName />
                    <input type="hidden" id="id" value="@ViewBag.Filter.Id" />
                    <input type="hidden" id="tableKey" value="@ViewBag.Filter.TableKey" />
                    @* <input type="hidden" id="dateFrom" value="@Model.DateFrom" />
                    <input type="hidden" id="dateTo" value="@Model.DateTo" /> *@
                    

                    <div class="panel mt-28">
                        <div class="flex m-0">
                            <table class="table-striped" id="AuditLogHistory">
                                @* multipleValueTable *@
                                <thead>
                                    <tr>
                                        <th>Updated By</th>
                                        <th>Updated Date</th>
                                        <th>Field Name</th>
                                        <th>Before Update</th>
                                        <th>After Update</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            
        </div>
    </div>
</main>


@section MyScripts {

    @Html.Partial("_DataTablePartial")
    <script type="text/javascript" src="~/js/custom/DynamicDataTable.js?v=@jsVersion"></script>
    <script type="text/javascript" src="~/js/custom/AuditLog/AuditLogs.js?v=@jsVersion"></script>
    <script type="text/javascript" src="~/js/custom/AuditLog/AuditLogsFilter.js?v=@jsVersion"></script>
    <script type="text/javascript" src="~/js/custom/AuditLog/AuditDetailsLogs .js?v=@jsVersion"></script>

    <script>
        //#region Setup API Url
        var AllAudit = "@Eltizam.Web.Helpers.APIURLHelper.GetAllAudit";
        var DeleteClient = "@Eltizam.Web.Helpers.APIURLHelper.DeleteClient";
        var GetAuditTableNameList = "@Eltizam.Web.Helpers.APIURLHelper.GetAuditTableName";
        var GetUserNameList = "@Eltizam.Web.Helpers.APIURLHelper.GetUserNameList";
        var AllAuditDetails = "@Eltizam.Web.Helpers.APIURLHelper.GetAuditDetails";
    </script>
}
