@using Eltizam.Web.Controllers
@using Microsoft.AspNetCore.Mvc.Localization

@model Eltizam.Business.Models.LoginViewModel
@*@inject IViewLocalizer Localizer*@
@inject Microsoft.Extensions.Localization.IStringLocalizer<Eltizam.Resource.Account> Localizer


@{
    ViewData["Title"] = @Localizer["Login"];
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>login - sign up</title>
    <link rel="stylesheet" href="./css/style.css">
</head>
<body>
    <!-- login screen -->
    <div class="loginContainer">
        <img src="./assets/logo.svg" alt="eltizam logo" class="logo"/>
        <div class="loginBox">
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                @if (ViewBag.errormessage != null)
                {
                    <p class="alert alert-danger" id="successMessage">@ViewBag.errormessage</p>
                }
                <p>Welcome</p>
                <p>Login to the portal with your credentials</p>

                <label for="userId">
                    User ID 
                    <input asp-for="Email" placeholder="enter user id">
                </label>
                <label for="password">
                    Password 
                    <div class="position-relative">
                        <input asp-for ="Password" placeholder="enter password">
                        <img src="./assets/eye.svg" alt="show hide password button" class="showPassword"/>
                        @* <sapn class="forgetPassword">Forget password ?</sapn> *@
                        <span class="forgetPassword"><a asp-controller="Account" asp-action="ForgetPassword">Forget password?</a></span>

                    </div>
                </label>
                <label class="checkbox">
                    <input type="checkbox">
                    Remember password ?
                </label>
                <button type="submit" class="blueBtn">Submit</button>
            </form>
        </div>
    </div>

    <script>
        document.querySelector('.showPassword').addEventListener('click', function () {
            if (document.getElementById('password').type == 'password') {
                document.getElementById('password').type = "text";
                document.querySelector('.forgetPassword').classList.add('showPassEyeCross');
            } else {
                document.getElementById('password').type = "password";
                document.querySelector('.forgetPassword').classList.remove('showPassEyeCross');
            }
        })
    </script>

</body>
</html>