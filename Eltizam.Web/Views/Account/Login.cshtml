@using Eltizam.Web.Controllers
@using Eltizam.Web.Helpers
@using Microsoft.AspNetCore.Mvc.Localization 
@model Eltizam.Business.Models.LoginViewModel 

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    var err = TempData[UserHelper.ErrorMessage];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>  
    <!-- login screen -->
    <div class="loginContainer">
        <img src="/assets/logo.svg" alt="eltizam logo" class="logo" />
        <div class="loginBox">
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">

                <p>Welcome</p>
                <p>Login to the portal with your credentials</p>
                @if (err != null)
                {
                    <p class="alert alert-danger">@err</p>
                }

                <label for="userId">
                    Email
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Email" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </label>

               @*  <label for="password">
                    Password
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter password" } })
                    <img src="/assets/eye.svg" alt="show hide password button" class="showPassword" />
                    <span class="forgetPassword">
                        <a asp-controller="Account" asp-action="ForgetPassword" style="color: var(--blue); font-size:medium;">Forget password?</a>
                    </span>
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </label> *@

                <label for="password">
                    Password
                    <div class="position-relative">
                        <input asp-for="Password" placeholder="enter password">
                        <img src="/assets/eye.svg" alt="show hide password button" class="showPassword" /> 
                        <span class="forgetPassword">
                            <a asp-controller="Account" asp-action="ForgetPassword" style="color: var(--blue); font-size:medium;">Forget password?</a>
                        </span>
                    </div>
                </label> 

                <button type="submit" class="blueBtn">Submit</button>
            </form>
        </div>
    </div>
</body>
</html>

@section MyScripts{
    <script>
        var pswd = $("#Password");
        var frgtpswd = $(".forgetPassword");

        $(".showPassword").on('click', function () {
            if (pswd.attr('type') === 'password') {
                pswd.attr('type', 'text');
                frgtpswd.addClass('showPassEyeCross');
            } else {
                pswd.attr('type', 'password');
                frgtpswd.removeClass('showPassEyeCross');
            }
        });
    </script>
}